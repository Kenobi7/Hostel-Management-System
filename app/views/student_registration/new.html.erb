
<p class="text-center">Create Student account</p>
   <%= link_to "Back to Home", root_path, :class => 'btn btn-primary' %>
  <%= form_with model: @student, url: student_register_path do |form| %>
    <% if form.object.errors.any? %>
      <div class="alert alert-danger">
        <% form.object.errors.full_messages.each do |msg| %>
          <div><%= msg %></div>
        <% end %>
      </div>
    <% end %>
    </br>
    <div class="form-group">
      <%= form.label :name, "Full Name", class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :mobileno, "Phone No.", class: "form-label" %>
      <%= form.text_field :mobileno, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :Rollno, "Roll number", class: "form-label" %>
      <%= form.text_field :Rollno, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :email, "Email", class: "form-label" %>
      <%= form.text_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :gender, "Gender", class: "form-label" %>
      <%= form.text_field :gender, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :address, "Address", class: "form-label" %>
      <%= form.text_field :address, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :password_confirmation, "Confirm Password" %>
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>
    <div class="d-flex justify-content-center">
        <%= form.submit "Sign Up", class: "btn btn-primary" %>
    </div>
  <% end %>
  <p class="mt-3 text-center">
    Already have an Account? <%= link_to "Log In", student_login_path %>
  </p>
</div>

